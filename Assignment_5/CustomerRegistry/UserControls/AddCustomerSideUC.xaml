<UserControl x:Class="CustomerRegistry.UserControls.AddCustomerSideUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomerRegistry.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Back" Command="{Binding Back}" FontSize="14"  Margin="10" MaxHeight="48"/>
        <Button Content="Clear" Command="{Binding CustomerView.Clear}" FontSize="14"  Grid.Row="1" Margin="10" MaxHeight="48"/>
        <Button Content="Save" Command="{Binding Save}" FontSize="14"  Grid.Row="2" Margin="10" MaxHeight="48"/>
    </Grid>
</UserControl>
