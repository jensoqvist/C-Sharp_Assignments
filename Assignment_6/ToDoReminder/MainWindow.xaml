<Window x:Class="ToDoReminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoReminder"
        xmlns:UC="clr-namespace:ToDoReminder.UserControls"
        mc:Ignorable="d"
        Title="Tasks To Do" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions> 
        <UC:MenuBar/>
        <UC:TaskListView Grid.Row="1" Margin="5" />
        <UC:BottomBar Grid.Row="2" Padding="5"/>
        
    </Grid>
</Window>
